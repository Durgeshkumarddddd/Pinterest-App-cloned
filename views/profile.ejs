<% include ./partials/header.ejs %>

<div class="profile w-full h-screen bg-zinc-800 pt-1 ">
  <form id="uploadform" hidden action="/fileupload" method="post" enctype="multipart/form-data">
    <input type="file" name="image" >
  </form>
    <div class="prodets flex items-center flex-col mt-10 ">
    <div class="relative">
        <span class=" w-10 h-10 rounded-full flex items-center justify-center bg-zinc-300 absolute bottom-0 right-0 ">
             <i id="uploadicon" class="ri-pencil-fill "></i>
         </span>
         <div class="probits w-36 h-36 bg-zinc-300 rounded-full overflow-hidden ">
            <img class="w-full h-full items-cover " src="images/uploads/<%= user.profileImage %>" alt="">
        </div>
     </div>
    <h1 class="text-semibold text-3xl text-white"> Durgesh kumar </h1>
    <h3 class=" text-md text-white text-md "> @durgeshji </h3>
    <a href="/edit" class=" rounded-full px-7 py-2 bg-zinc-400 text-xs font-semibold mt-2 ">Edit</a>
    <a href="/add" class=" bg-red-700 text-xs font-semibold px-6 py-2 mt-5 rounded-full text-white ">Add New Image</a>
 </div>
 <div class="flex flex-wrap gap-10 mt-10 px-10 ">
    <div class="cards">
        <div class="bg-zinc-200 w-20 h-20 rounded-lg overflow-hidden">
            <img class="object-cover" src=" images/uploads/<%= user.postimage %>" alt="">
        </div>
         <h1 class="text-semibold text-1xl text-white mt-2">All pins </h1>
         <h3 class=" text-white "> 28 pins </h3>
    </div>
 </div>
</div>
<script>

    document.querySelector("#uploadicon").addEventListener("click" , function(){
        document.querySelector("#uploadform input").click();
    });

    document.querySelector("#uploadform input").addEventListener("change",function(){
        document.querySelector("#uploadform").submit();
    });

</script>

