<div class="bg-zinc-700 w-full h-full text-white pt-1">
    <div class="mt-3 px-10 py-5">
        <h1 class="text-xl">Create new post.</h1>
        <hr class="opacity-10 mt-1">
        <form action="/createpost" method="post" enctype="multipart/form-data">
            <input class="block w-1/3 px-3 py-2 mt-5 " type="file" name="postimage" >
            <input class="block w-1/3 px-3 py-2 mt-2 border-2 rounded-md text-zinc-700" type="text" name="Title" placeholder="Title">
         <textarea class=" block w-1/3 px-3 py-2 mt-3 min-h-40 rounded-md text-zinc-700" type="text" name="description" placeholder="Write Description"></textarea> 
            <input class=" block w-1/3 px-3 py-2 mt-5 rounded-md text-white bg-red-700" type="submit" value="Create post">
        </form>
    </div>
</div> 
